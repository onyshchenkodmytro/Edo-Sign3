@{
    Layout = "_Layout";
    ViewData["Title"] = "Підпис файлу";
}

<h2>Підпис файлу</h2>

<form asp-action="SignFile" method="post">
    <div class="mb-3">
        <label>File ID:</label>
        <input name="fileId" class="form-control" placeholder="Введіть File ID..." />
    </div>
    <button type="submit" class="btn btn-success">Підписати</button>
</form>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info mt-4">@ViewBag.Message</div>
}

@if (ViewBag.Signature != null)
{
    <div class="alert alert-success mt-3">
        <b>Підпис:</b>
        <textarea class="form-control mt-2" rows="4" readonly>@ViewBag.Signature</textarea>
    </div>

    <div class="alert alert-secondary mt-3">
        <b>Публічний ключ (для перевірки):</b>
        <textarea class="form-control mt-2" rows="4" readonly>@ViewBag.PublicKey</textarea>
    </div>
}
